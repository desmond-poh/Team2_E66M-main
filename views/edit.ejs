<!DOCTYPE html>
<html>
<head>
  <title>Edit Memory</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
</head>
<body>
  <div class="container mt-5">
    <h1>Edit Memory</h1>

    <%- include('partials/flashMessages') %>

    <form
      action="/editmemories/<%= memory.imageId %>"
      method="POST"
      enctype="multipart/form-data"
      class="mt-4"
    >
      <!-- Title (stored as imageName in DB) -->
      <div class="mb-3">
        <label for="imageName" class="form-label">Title</label>
        <input
          type="text"
          class="form-control"
          id="imageName"
          name="imageName"
          value="<%= memory.imageName %>"
          required
        >
      </div>

      <!-- Date -->
      <div class="mb-3">
        <label for="date" class="form-label">Date</label>
        <input
            type="date"
            class="form-control"
            id="date"
            name="date"
            value="<%= memory.date %>"
            required
        >

      </div>

      <!-- Current Image Preview -->
      <% if (memory.image) { %>
        <div class="mb-3">
          <label class="form-label">Current Image</label><br>
          <img
            src="<%= memory.image %>"
            class="img-fluid rounded mb-2"
            style="max-height: 200px;"
            alt="Memory Image"
          >
        </div>
      <% } %>

      <!-- Keep existing image URL -->
      <input
        type="hidden"
        name="currentImage"
        value="<%= memory.image %>"
      >

      <!-- Upload new image -->
      <div class="mb-3">
        <label for="image" class="form-label">Change Image (optional)</label>
        <input
          type="file"
          class="form-control"
          id="image"
          name="image"
          accept="image/*"
        >
      </div>

      <button type="submit" class="btn btn-primary">Save Changes</button>
      <a href="/dashboard" class="btn btn-secondary ms-2">Cancel</a>
    </form>
  </div>
</body>
</html>
