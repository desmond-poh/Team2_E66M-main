<!DOCTYPE html>
<html>
<head>
  <title>LIT MEMORIES - Dashboard</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand me-auto" href="/dashboard" style="font-size:1.5rem;">
        LIT MEMORIES
      </a>
      <button class="navbar-toggler" type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarNav"
              aria-controls="navbarNav"
              aria-expanded="false"
              aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>
  </nav>
 
  
  <div class="container mt-5">
    <% if (messages && messages.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <% messages.forEach(function(msg) { %>
        <%= msg %><br>
      <% }); %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
    <h1>Dashboard</h1> 

    <% if (user) { %>
      <h3 class="mt-3">
        Welcome back, <%= user.username %> <b>[<%= user.role %>]</b>
        <a href="/logout" class="btn btn-primary btn-sm ms-2">Logout</a>
      </h3>
    <% } %>

    <!-- Search bar -->
    <div class="row my-4">
      <div class="col-md-6 offset-md-3">
        <form action="/dashboard" method="GET" class="input-group">
          <input
            type="text"
            name="search"
            class="form-control"
            placeholder="🔍 Search memories..."
            value="<%= search %>"/>
          <button class="btn btn-outline-secondary" type="submit">Search</button>
        </form>
      </div>
    </div>

    <hr>
    <h2 class="text-center">Your Memories</h2>

    <% if (!memories || memories.length === 0) { %>
      <div class="alert alert-info text-center">No memories yet.</div>
      <div class="text-center">
        <a href="/addMemories" class="btn btn-success mt-3">Add Memory</a>
      </div>
    <% } else { %>
      <div class="text-center mb-3">
        <a href="/addMemories" class="btn btn-success">Add Memory</a>
      </div>

      <div class="row g-4">
        <% memories.forEach(function(m) { %>
          <div class="col-md-4">
            <div class="card h-100">
              <!-- Thumbnail trigger -->
              <% if (m.image) { %>
                <img
                  src="<%= m.image.startsWith('/') ? m.image : '/' + m.image %>"
                  class="card-img-top"
                  alt="<%= m.imageName %>"
                  style="cursor:pointer;"
                  data-bs-toggle="modal"
                  data-bs-target="#imageModal<%= m.imageId %>"
                >
              <% } else { %>
                <div class="card-img-top d-flex align-items-center justify-content-center bg-light"
                     style="height:180px;color:#999;">
                  No image
                </div>
              <% } %>

              <div class="card-body">
                <h5 class="card-title"><%= m.imageName %></h5>
                <% if (user.role === 'admin') { %>
                  <p class="card-text">
                    <small class="text-muted">By <%= m.username %></small>
                  </p>
                <% } %>
                <p class="card-text"><b>Date:</b> <%= m.date %></p>
                <% if (m.description) { %>
                  <p class="card-text"><b>Description:</b> <%= m.description %></p>
                <% } %>
              </div>

              <div class="card-footer d-flex justify-content-between">
                <a href="/editmemories/<%= m.imageId %>" class="btn btn-warning btn-sm">Edit</a>
                <a href="/deletememory/<%= m.imageId %>" class="btn btn-danger btn-sm">Delete</a>
              </div>
            </div>
          </div>

          <!-- Modal for this image -->
          <div class="modal fade" id="imageModal<%= m.imageId %>" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
              <div class="modal-content bg-transparent border-0">
                <div class="modal-body p-0">
                  <img
                    src="<%= m.image.startsWith('/') ? m.image : '/' + m.image %>"
                    class="img-fluid rounded"
                    alt="<%= m.imageName %>"
                  >
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <!-- Bootstrap JS (required for modals) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
